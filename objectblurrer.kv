<ObjectBlurrerScreen>:
    orientation: "vertical"

    Label:
        text: "Program jest rozwiązaniem na postawiony problem etyczny,\npoprzez ograniczenie rozprzestrzeniania się danych osób trzecich w postaci rejestracji samochodowych"
        size_hint: 1, 0.16

    Button:
        text: "Wybierz zdjecie"
        on_release: root.open_file_chooser()
        size_hint: 1, 0.1

    Image:
        source: root.shown_image_path

    Button:
        text: "Zamaż rejestracje i zapisz nowe zdjęcie"
        size_hint: 1, 0.07
        on_release: root.blur_image()
