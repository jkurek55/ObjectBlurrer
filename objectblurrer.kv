<ObjectBlurrerScreen>:
    orientation: "vertical"

    Label:
        text: "Ten program służy jako rozwiązanie na problem etyczny polegający na rozpowszechnianiu zdjęć pojazdów bez ukrywania tablic rejestracyjnych "
        size_hint: 1, 0.07

    Button:
        text: "Wybierz zdjecie"
        on_release: root.open_file_chooser()
        size_hint: 1, 0.1

    Image:
        source: root.shown_image_path

    Button:
        text: "Zamaż rejestracje i zapisz nowe zdjęcie"
        size_hint: 1, 0.07
        on_release: root.blur_image()
